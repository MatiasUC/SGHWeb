@model SGHWeb.Models.LoginSGHModel

@{
    Layout = null;
    ViewBag.Title = "SGHWeb - Inicio de Sesión";
}

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->

    <div class="jumbotron">
        <div class="container">
            <h1>Bienvenido a SGHWeb!</h1>
            <p>Gestione su negocio desde cualquier parte.</p>
        </div>
    </div>

    <div class="container">
        <div class="form-login">
            <div class="col-md-7">
                
            </div>
            <div class="col-md-5">
                <div class="row">&nbsp;</div>
                @using (Html.BeginForm("", "Login", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, id = "formLogin", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    
                    <fieldset class="control-group">
                        <legend>Login - Inicio de Sesión</legend>
                        <div class="form-group">
                            @Html.LabelFor(m => m.username, new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.username, new { placeholder = "Usuario", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.username)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.password, new { @class = "col-md-3 control-label" })
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.password, new { placeholder = "Contraseña", @class = "form-control" } )
                                @Html.ValidationMessageFor(m => m.password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-2">
                                <button type="submit" id="btnLogin" class="btn btn-success btn-large" title="Iniciar Sesión">Ingresar</button>
                            </div>
                            <div class="col-md-offset-1 col-md-3">
                                <p class="help-inline">
                                    <a class="linkSup cursorPointer" title="Recordar Contraseña">
                                        ¿Olvid&oacute; su contraseña?
                                    </a>
                                </p>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>

    <hr />
        
    <div class="footer">
        <div class="container">
            <div class="col-md-offset-5 col-md-4">
                <footer>
                    <p>&copy; 2013 SGHWeb 1.0 <a href="#" title="VorteX Ingeniería Ltda.">VorteX Ingeniería Ltda.</a> Todos los derechos reservados.</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

</body>

</html>
